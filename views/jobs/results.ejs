<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Job Searcher</title>
  <%- include('../templates/head') %>
  <link rel="stylesheet" href="/css/jobs/results.css">
</head>
<body>
  <%- include('../templates/navbar') %>
  <div class="container">
    <div class="search-title">
      Results for <%= title %> near <%= location %>:
    </div>
    <% if (jobs.length > 0) { %>
    <div class="job-results">
      <% for (let i = 0; i < jobs.length; i++) { %>
        <div class="job-result" onclick="window.location.href = '/jobs/<%= jobs[i].service %>/<%= jobs[i].job_id %>'">
          <div class="job-header">
            <div class="job-title"><%= jobs[i].title %></div>
            <div class="job-service"><%= jobs[i].service %></div>
          </div>
          <div class="job-row">
            <div class="job-company"><%= jobs[i].company %></div>
            <div class="job-type"><%= jobs[i].type %></div>
          </div>
          <div class="job-location"><%= jobs[i].location %></div>
          <div class="job-save-remove-row">
            <div class="job-save">Save</div>
            <div class="job-remove">Remove</div>
          </div>
          <div class="job-salary"><%= jobs[i].salary %></div>
          <div class="job-footer">
            <div class="job-listed"><%= jobs[i].listed %></div>
            <div class="job-apply">
              <!-- <button class="job-apply-button" id="<%= jobs[i].job_id %>" data-service="<%= jobs[i].service %>">Apply</button> -->
            </div>
          </div>
        </div>
      <% } %>
    </div>
    <% } else { %>
      <div class="no-results">
        No results found.
      </div>
    <% } %>
  </div>
  <script src="/js/jobs/results.js"></script>
</body>
</html>